<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="app.worldofcinema.presentation.view.movies.fragments.main.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
        <action
            android:id="@+id/action_moviesFragment_to_categoryMoviesFragment"
            app:destination="@id/categoryMoviesFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="app.worldofcinema.presentation.view.movies.fragments.details.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" />
    <fragment
        android:id="@+id/movieFavoritesFragment"
        android:name="app.worldofcinema.presentation.view.movies.fragments.favorites.MovieFavoritesFragment"
        android:label="fragment_movie_favorites"
        tools:layout="@layout/fragment_movie_favorites" >
        <action
            android:id="@+id/action_movieFavoritesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieSearchFragment"
        android:name="app.worldofcinema.presentation.view.movies.fragments.search.MovieSearchFragment"
        android:label="fragment_movie_search"
        tools:layout="@layout/fragment_movie_search" >
        <action
            android:id="@+id/action_movieSearchFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryMoviesFragment"
        android:name="app.worldofcinema.presentation.view.movies.fragments.main.allmoviescategory.CategoryMoviesFragment"
        android:label="fragment_category_movies"
        tools:layout="@layout/fragment_category_movies" >
        <action
            android:id="@+id/action_categoryMoviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
</navigation>