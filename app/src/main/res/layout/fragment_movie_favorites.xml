<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.movies.fragments.favorites.MovieFavoritesFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/favoritesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="@string/favorites_text_fragment"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:paddingBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favoritesText"
        tools:listitem="@layout/favorites_film"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logOut"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/white"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:text="@string/log_out"
        android:textColor="@color/ic_launcher_background"
        android:textSize="5sp"
        android:textStyle="bold"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toEndOf="@+id/favoritesText"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/ic_launcher_background"
        app:strokeWidth="1dp"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>